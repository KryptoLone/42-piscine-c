all:
	gcc -Wall -Wextra -Werror main.c ft_putchar.c rush00.c -o rush-00
	gcc -Wall -Wextra -Werror main.c ft_putchar.c rush01.c -o rush-01
	gcc -Wall -Wextra -Werror main.c ft_putchar.c rush02.c -o rush-02
	gcc -Wall -Wextra -Werror main.c ft_putchar.c rush03.c -o rush-03
	gcc -Wall -Wextra -Werror main.c ft_putchar.c rush04.c -o rush-04

clean:
	rm rush-00 rush-01 rush-03 rush-04

re: clean all
